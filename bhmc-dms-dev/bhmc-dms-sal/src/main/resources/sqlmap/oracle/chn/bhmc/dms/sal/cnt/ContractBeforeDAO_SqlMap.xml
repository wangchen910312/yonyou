            VALUES
            (
              #{dlrCd}                --딜러코드
             ,#{beContractNo}         --선출고계약번호
             ,#{carId}                --차량ID
             ,#{vinNo}                --차대번호
             ,#{regUsrId}             --등록자ID
             ,SYSDATE
             ,#{updtUsrId}            --수정자ID
             ,SYSDATE
        )
    </insert>

</mapper>