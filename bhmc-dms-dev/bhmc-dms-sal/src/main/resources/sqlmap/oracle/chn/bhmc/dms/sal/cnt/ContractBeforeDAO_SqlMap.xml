        INSERT INTO SA_0255T    --전략출고ITEM
        (
               DLR_CD                --딜러코드
             , BE_CONTRACT_NO        --선출고계약번호
             , CAR_ID                --차량ID
             , VIN_NO                --차대번호
             , REG_USR_ID            --등록자ID
