<?xml version="1.0"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>chn.bhmc.dms</groupId>
        <artifactId>bhmc-dms</artifactId>
        <version>0.0.1</version>
    </parent>

    <artifactId>bhmc-dms-bat</artifactId>
    <packaging>bundle</packaging>  

    <name>BHMC-DMS-BAT</name>
    <description>
	   BHMC-DMS-BAT OSGi bundle project
    </description>

    <dependencies>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>chn.bhmc.dms</groupId>
            <artifactId>bhmc-dms-core</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>chn.bhmc.dms</groupId>
            <artifactId>bhmc-dms-cmm</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>${maven-bundle-plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.groupId}.${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-GroupId>${project.groupId}</Bundle-GroupId>
                        <Bundle-ArtifactId>${project.artifactId}</Bundle-ArtifactId>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Bundle-Activator>chn.bhmc.dms.bat.activator.Activator</Bundle-Activator>
                        <Export-Package>
                            chn.bhmc.dms.bat.*;version=${project.version}
                        </Export-Package>
                        <Import-Package>
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>bhmc-dms-releases</id>
            <url>http://10.125.211.116:8081/nexus/content/repositories/bhmc-dms-releases/</url>
        </repository>
    </distributionManagement>
</project>
