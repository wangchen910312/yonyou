<?xml version="1.0" encoding="UTF-8"?>
<jeus-web-dd xmlns="http://www.tmaxsoft.com/xml/ns/jeus">
    <context-path>/</context-path>
    <webinf-first>false</webinf-first>
    <auto-reload>
        <enable-reload>true</enable-reload>
        <check-on-demand>true</check-on-demand>
    </auto-reload>
    <encoding>
        <request-encoding>
            <forced>UTF-8</forced>
        </request-encoding>
        <response-encoding>
            <forced>UTF-8</forced>
        </response-encoding>
    </encoding>

    <res-ref>
        <jndi-info>
            <ref-name>jdbc/dataSource</ref-name>
            <export-name>dataSource</export-name>
        </jndi-info>
        <jndi-info>
            <ref-name>jdbc/commonQueryDataSource</ref-name>
            <export-name>commonQueryDataSource</export-name>
        </jndi-info>
    </res-ref>
</jeus-web-dd>