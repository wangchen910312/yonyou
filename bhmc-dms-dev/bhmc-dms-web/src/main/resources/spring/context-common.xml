<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:util="http://www.springframework.org/schema/util"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

    <context:component-scan base-package="able,egovframework,chn.bhmc.dms,com.yonyou">
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:exclude-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice"/>
    </context:component-scan>

    <bean id="applicationContextProvider" class="chn.bhmc.dms.core.context.ApplicationContextProvider" />
    <bean id="servletContextProvider" class="chn.bhmc.dms.core.context.ServletContextProvider" />

    <!-- 알람메세지 서비스 -->
    <bean id="notificationMessageService" class="chn.bhmc.dms.cmm.nms.service.impl.NotificationMessageServiceImpl" />

    <!-- 콜센터 서비스 -->
    <bean id="deviceStatusService" class="chn.bhmc.dms.crm.cal.service.DeviceStatusService" />


    <!-- 로케일설정 -->
    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.SessionLocaleResolver">
        <property name="defaultLocale" value="zh" />
    </bean>

    <!-- 테마설정 -->
    <bean id="themeSource" class="org.springframework.ui.context.support.ResourceBundleThemeSource">
        <property name="basenamePrefix" value="theme-" />
    </bean>
    <bean id="themeResolver" class="org.springframework.web.servlet.theme.CookieThemeResolver">
        <property name="defaultThemeName" value="default" />
    </bean>

    <!-- 테마목록설정 -->
    <bean id="themeNames" class="org.springframework.beans.factory.config.ListFactoryBean">
        <property name="targetListClass">
            <value>java.util.ArrayList</value>
        </property>
        <property name="sourceList">
            <list>
                <value>default</value>
                <value>blue</value>
                <value>red</value>
            </list>
        </property>
    </bean>

    <!--
              결재승인 콜백 리졸버
              결재승인 이후 추가적인 처리가 필요한 경우 결재승인 콜백 핸들러를 구현하고 리졸버에 핸들러로 등록한다.
    -->
    <bean id="approvalCallbackResolver" class="chn.bhmc.dms.cmm.apr.service.ApprovalCallbackResolver">
        <property name="handlers">
            <list>
                <bean class="chn.bhmc.dms.crm.dmm.service.MembershipTransApprovalCallbackHandler" />        <!-- 멤버십 포인트 양도 결재승인 콜백 핸들러 -->
                <bean class="chn.bhmc.dms.crm.dmm.service.SpecialPointApprovalCallbackHandler" />           <!-- 특별포인트 결재승인 콜백 핸들러 -->
                <bean class="chn.bhmc.dms.crm.mcm.service.MarketingCampaignApprovalCallbackHandler" />      <!-- 마케팅캠페인 결재승인 콜백 핸들러 -->
            </list>
        </property>
    </bean>

    <!--
              트랜잭션에 포함되지 않아야 하는 쿼리 실행이 필요한 경우 적용한다.
    -->
    <bean id="commonQueryService" class="chn.bhmc.dms.core.support.query.CommonQueryService">
        <property name="dataSource" ref="commonQueryDataSource"/>
        <property name="queryProvider">
        	<map>
        		<!-- 블루멤버십 인터페이스 로그 기록 -->
        		<entry key="BLUEMEMBERSHIP_INTERFACE_LOG" value="INSERT INTO CR_0829T (BM_IF_LOG_SEQ, DLR_CD, BM_IF_ID, BM_IF_PARAM, BM_IF_RESULT, REG_USR_ID, REG_DT) VALUES (SEQ_CR_0829T.NEXTVAL, ?, ?, ?, ?, ?, SYSDATE)" />
        	</map>
        </property>
    </bean>

    <bean id="leaveaTrace" class="egovframework.rte.fdl.cmmn.trace.LeaveaTrace">
        <property name="traceHandlerServices">
            <list>
                <ref bean="traceHandlerService" />
            </list>
        </property>
    </bean>

    <bean id="traceHandlerService" class="egovframework.rte.fdl.cmmn.trace.manager.DefaultTraceHandleManager">
        <property name="reqExpMatcher">
            <ref bean="antPathMater" />
        </property>
        <property name="patterns">
            <list>
                <value>*</value>
            </list>
        </property>
        <property name="handlers">
            <list>
                <ref bean="defaultTraceHandler" />
            </list>
        </property>
    </bean>

    <bean id="antPathMater" class="org.springframework.util.AntPathMatcher" />
    <bean id="defaultTraceHandler" class="egovframework.rte.fdl.cmmn.trace.handler.DefaultTraceHandler" />
    <bean id="sessionDestoryListener" class="chn.bhmc.dms.security.session.SessionDestoryListener" />
    <bean id="sessionCreateListener" class="chn.bhmc.dms.security.session.SessionCreateListener" />

</beans>
