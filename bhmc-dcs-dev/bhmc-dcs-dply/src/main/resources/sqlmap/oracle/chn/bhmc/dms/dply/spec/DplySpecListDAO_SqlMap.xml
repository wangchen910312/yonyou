<mapper namespace="chn.bhmc.dms.dply.spec.service.dao.DplySpecListDAO">

    <!-- SPEC 목록을 조회한다. -->
    <select id="selectSpecListByCondition" parameterType="DplySpecListSearchVO" resultType="DplySpecListVO">
        /* [chn.bhmc.dms.dply.spec.service.dao.DplySpecListDAO.selectSpecListByCondition] */
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                SELECT
                       A.SPEC_CD
                     , A.SPEC_TP
                     , A.SPEC_NM
                     , A.SPEC_CONT
                     , A.REG_USR_ID
                     , A.REG_DT
                     , A.UPDT_USR_ID
                     , A.UPDT_DT
                     , (SELECT MIN(B.DEPLOY_START_DT)
                          FROM CM_1502T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS SCHDL_DT
                     , (SELECT COUNT(*)
                          FROM CM_1504T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS DMS_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1403T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS BDL_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1404T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS SQL_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1405T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS PROP_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1501T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS FILE_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1511T B
                         WHERE A.SPEC_CD = B.SPEC_CD) AS COMMAND_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1502T B
                         WHERE A.SPEC_CD = B.SPEC_CD
                           AND B.DEPLOY_STAT_CD = 'W') AS WORK_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1502T B
                         WHERE A.SPEC_CD = B.SPEC_CD
                           AND B.DEPLOY_STAT_CD = 'N') AS READY_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1502T B
                         WHERE A.SPEC_CD = B.SPEC_CD
                           AND B.DEPLOY_STAT_CD IN ('R', 'S')) AS RUN_CNT
                     , (SELECT COUNT(*)
                          FROM CM_1502T B
                         WHERE A.SPEC_CD = B.SPEC_CD
                           AND B.DEPLOY_STAT_CD IN ('C', 'Y', 'Z')) AS END_CNT
                  FROM CM_1401T A
                <where>
                     <if test='sSpecCd != null and sSpecCd != ""'>
                        <choose>
                            <when test='@org.apache.commons.lang3.StringUtils@contains(sSpecCd,"*")'>
                                <bind name='sSpecCd' value='@org.apache.commons.lang3.StringUtils@replace(sSpecCd, "*", "%")' />
                                 AND SPEC_CD LIKE #{sSpecCd}
                            </when>
                            <otherwise>
                                 AND SPEC_CD = #{sSpecCd}
                            </otherwise>
                        </choose>
                    </if>

                     <if test='sSpecNm != null and sSpecNm != ""'>
                        <choose>
                            <when test='@org.apache.commons.lang3.StringUtils@contains(sSpecNm,"*")'>
                                <bind name='sSpecNm' value='@org.apache.commons.lang3.StringUtils@replace(sSpecNm, "*", "%")' />
                                 AND SPEC_NM LIKE #{sSpecNm}
                            </when>
                            <otherwise>
                                 AND SPEC_NM = #{sSpecNm}
                            </otherwise>
                        </choose>
                    </if>

                    <if test='sStartRegDt != null'>
                                 AND A.REG_DT <![CDATA[ >= ]]> #{sStartRegDt}
                    </if>
                    <if test='sEndRegDt != null'>
                                 AND A.REG_DT <![CDATA[ < ]]> #{sEndRegDt} + 1
                    </if>

                </where>

                ORDER BY
                <choose>
                    <when test='sort != null'>
                        <foreach item="item" index="index" collection="sort" open="" separator="," close="">
                            <choose>
                                <when test='item.field == "specNm"'>SPEC_NM <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "specCd"'>SPEC_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <otherwise>
                                    SPEC_CD DESC
                                </otherwise>
                            </choose>
                        </foreach>
                    </when>
                    <otherwise>
                        SPEC_CD DESC
                    </otherwise>
                </choose>
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM > #{firstIndex}
            </if>
        </where>
    </select>

    <!-- SPEC 목록수를 조회한다. -->
    <select id="selectSpecListByConditionCnt" parameterType="DplySpecListSearchVO" resultType="int">
        /* [chn.bhmc.dms.dply.spec.service.dao.DplySpecListDAO.selectSpecListByConditionCnt] */
        SELECT COUNT(*) AS VALUE FROM CM_1401T A
                <where>
                     <if test='sSpecCd != null and sSpecCd != ""'>
                        <choose>
                            <when test='@org.apache.commons.lang3.StringUtils@contains(sSpecCd,"*")'>
                                <bind name='sSpecCd' value='@org.apache.commons.lang3.StringUtils@replace(sSpecCd, "*", "%")' />
                                 AND A.SPEC_CD LIKE #{sSpecCd}
                            </when>
                            <otherwise>
                                 AND A.SPEC_CD = #{sSpecCd}
                            </otherwise>
                        </choose>
                    </if>

                     <if test='sSpecNm != null and sSpecNm != ""'>
                        <choose>
                            <when test='@org.apache.commons.lang3.StringUtils@contains(sSpecNm,"*")'>
                                <bind name='sSpecNm' value='@org.apache.commons.lang3.StringUtils@replace(sSpecNm, "*", "%")' />
                                 AND A.SPEC_NM LIKE #{sSpecNm}
                            </when>
                            <otherwise>
                                 AND A.SPEC_NM = #{sSpecNm}
                            </otherwise>
                        </choose>
                    </if>

                    <if test='sStartRegDt != null'>
                                 AND A.REG_DT <![CDATA[ >= ]]> #{sStartRegDt}
                    </if>
                    <if test='sEndRegDt != null'>
                                 AND A.REG_DT <![CDATA[ < ]]> #{sEndRegDt} + 1
                    </if>

                </where>
    </select>


</mapper>