<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chn.bhmc.dms.cva.cmm.service.dao.CvaCommonDAO">

    <!-- 딜러마스터에서 딜러를 조회. (COUNT) -->
    <select id="selectCvaDealerCnt" parameterType="CvaDealerSearchVO" resultType="int">
        SELECT COUNT(1) AS VALUE
          FROM CM_0101T
         WHERE SALE_DLR_CITY_CD IN (SELECT CITY_CD
                                      FROM CM_3201T
                                     WHERE CSTL_CD = #{sSaleDlrSungCd})
    </select>
    <!-- 딜러마스터에서 딜러를 조회  -->
    <select id="selectCvaDealer" parameterType="CvaDealerSearchVO" resultType="CvaDealerVO">
        SELECT DLR_CD, DLR_NM
          FROM CM_0101T
         WHERE SALE_DLR_CITY_CD IN (SELECT CITY_CD
                                      FROM CM_3201T
                                     WHERE CSTL_CD = #{sSaleDlrSungCd})
    </select>

</mapper>


