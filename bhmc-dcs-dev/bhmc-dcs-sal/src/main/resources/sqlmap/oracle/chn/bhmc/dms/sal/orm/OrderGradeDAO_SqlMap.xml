<mapper namespace="chn.bhmc.dms.sal.orm.service.dao.OrderGradeDAO">

    <select id="selectOrderGradeConditionCnt" parameterType="OrderGradeSearchVO" resultType="int">
    <!-- selectOrderGradeConditionCnt -->
        SELECT COUNT(CARLINE_CD)
          FROM SA_0172T
        <where>
            <if test='sCarlineCd != null and sCarlineCd != ""'>
               AND CARLINE_CD = #{sCarlineCd}
            </if>
            <if test='sModelCd != null and sModelCd != ""'>
               AND MODEL_CD = #{sModelCd}
            </if>
            <if test='sOcnCd != null and sOcnCd != ""'>
               AND OCN_CD = #{sOcnCd}
            </if>
            <if test='sExtColorCd != null and sExtColorCd != ""'>
               AND EXT_COLOR_CD = #{sExtColorCd}
            </if>
        </where>
    </select>


    <select id="selectOrderGradeCondition" parameterType="OrderGradeSearchVO" resultType="OrderGradeVO">
    <!-- selectOrderGradeCondition -->
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                SELECT FN_GET_CARLINE_NM(CARLINE_CD) AS CARLINE_CD
                       ,FN_GET_MODEL_NM(MODEL_CD) AS MODEL_CD
                       ,FN_GET_OCN_NM(MODEL_CD, OCN_CD) AS OCN_CD
                       ,FN_GET_EXT_COLOR_NM(EXT_COLOR_CD) AS EXT_COLOR_CD
                       ,FN_GET_INT_COLOR_NM(INT_COLOR_CD) AS INT_COLOR_CD
                       ,NVL(TRIM(ORD_GRADE_CD),'A') AS ORD_GRADE_CD
                       ,PDI_ALLOC_COST_VAL
                       ,REG_USR_ID
                       ,REG_DT
                       ,UPDT_USR_ID
                       ,UPDT_DT
                   FROM SA_0172T
                <where>
                    <if test='sCarlineCd != null and sCarlineCd != ""'>
                       AND CARLINE_CD = #{sCarlineCd}
                    </if>
                    <if test='sModelCd != null and sModelCd != ""'>
                       AND MODEL_CD = #{sModelCd}
                    </if>
                    <if test='sOcnCd != null and sOcnCd != ""'>
                       AND OCN_CD = #{sOcnCd}
                    </if>
                    <if test='sExtColorCd != null and sExtColorCd != ""'>
                       AND EXT_COLOR_CD = #{sExtColorCd}
                    </if>
                </where>
                 ORDER BY
                 <choose>
                    <when test='sort != null'>
                        <foreach item="item" index="index" collection="sort" open="" separator="," close="">
                            <choose>
                                <when test='item.field == "carlineCd"'>CARLINE_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "modelCd"'>MODEL_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "ocnCd"'>OCN_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "extColorCd"'>EXT_COLOR_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "intColorCd"'>INT_COLOR_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "ordGradeCd"'>ORD_GRADE_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "regDt"'>REG_DT <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "updDt"'>UPDT_DT <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <otherwise>
                                    CARLINE_CD, MODEL_CD, OCN_CD, EXT_COLOR_CD, INT_COLOR_CD, ORD_GRADE_CD, REG_DT, UPDT_DT NULLS LAST
                                </otherwise>
                            </choose>
                        </foreach>
                    </when>
                    <otherwise>
                        CARLINE_CD, MODEL_CD, OCN_CD, EXT_COLOR_CD, INT_COLOR_CD, ORD_GRADE_CD, REG_DT, UPDT_DT NULLS LAST
                    </otherwise>
                </choose>
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM <![CDATA[>]]> #{firstIndex}
            </if>
        </where>
    </select>

</mapper>

