<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chn.bhmc.dms.sal.veh.service.dao.VehicleSpecModelDAO">

    <!-- 차량모델 목록 데이터를 조회한다. 공통으로 DropdownList에서 쓰기위함. (중복 모델 display 방지)  -->
    <select id="selectVehicleModelListByCondition" parameterType="VehicleSearchVO" resultType="VehicleVO">
       
          SELECT B.FSCP_MODTP_CD AS MODEL_CD,B.FSCP_CHM_MMM AS MODEL_NM,B.FSCP_CHM_MMM AS MODEL_CD_NM
              ,B.FSCP_CHM_MMM AS MODEL_EN_NM
          FROM SA_0102T SA0102,SA_0105T B
         WHERE 1=1
            AND SUBSTR(SA0102.MODEL_CD, 1, 2) = #{carlineCd}
           AND SA0102.MODEL_CD = B.MODEL_CD
         GROUP BY SUBSTR(SA0102.MODEL_CD, 1, 2), B.FSCP_MODTP_CD , B.FSCP_CHM_MMM HAVING FSCP_CHM_MMM IS NOT NULL
        
         
    </select>

	<!-- 모델 목록  -->
	<select id="selectVehicleModelByCondition" parameterType="VehicleSearchVO" resultType="VehicleVO">
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                SELECT SA0101.CARLINE_CD,SA0101.CARLINE_NM
                      ,SA0102.MODEL_CD,SA0102.MODEL_NM,SA0102.MODEL_EN_NM,FN_GET_MODEL_NM(SA0102.MODEL_CD) AS MODEL_CD_NM
                      ,SA0102.PC_DSTIN_TP,SA0102.USE_YN,SA0102.SALE_PSB_YN,SA0101.REG_USR_ID
                      ,SA0102.REG_DT
                  FROM SA_0101T SA0101,SA_0102T SA0102
                 WHERE 1=1
                   AND SA0101.CARLINE_CD = SA0102.CARLINE_CD
                  <if test='carlineCd != null and carlineCd != ""'>
                   AND SA0101.CARLINE_CD = #{carlineCd}
                  </if>
                  <if test='modelCd != null and modelCd != ""'>
                   AND SA0102.MODEL_CD = #{modelCd}
                  </if>
                  <if test='modelNm != null and modelNm != ""'>
                      <choose>
                          <when test='@org.apache.commons.lang3.StringUtils@contains(modelNm,"*")'>
                              <bind name='modelNm' value='@org.apache.commons.lang3.StringUtils@replace(modelNm, "*", "%")' />
                             AND SA0102.MODEL_NM LIKE #{modelNm}
                          </when>
                          <otherwise>
                             AND SA0102.MODEL_NM = #{modelNm}
                          </otherwise>
                      </choose>
                 </if>
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM > #{firstIndex}
            </if>
        </where>
         ORDER BY
         <choose>
            <when test='sort != null'>
                <foreach item="item" index="index" collection="sort" open="" separator="," close="">
                    <choose>
                        <when test='item.field == "carlineCd"'>CARLINE_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "carlineNm"'>CARLINE_NM <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "modelCd"'>MODEL_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "modelNm"'>MODEL_NM <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "modelEnNm"'>MODEL_EN_NM <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "pcDstinTp"'>PC_DSTIN_TP <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "useYn"'>USE_YN <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "salePsbYn"'>SALE_PSB_YN <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "regUsrId"'>REG_USR_ID <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <when test='item.field == "regDt"'>REG_DT <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                        <otherwise>
                            CARLINE_CD ASC
                        </otherwise>
                    </choose>
                </foreach>
            </when>
            <otherwise>
                CARLINE_CD ASC
            </otherwise>
        </choose>
	</select>

	<!-- 모델 목록 갯수  -->
	<select id="selectVehicleModelByConditionCnt" parameterType="VehicleSearchVO" resultType="int">
        SELECT COUNT(*) AS VALUE
          FROM SA_0101T SA0101,SA_0102T SA0102
         WHERE 1=1
           AND SA0101.CARLINE_CD = SA0102.CARLINE_CD
         <if test='carlineCd != null and carlineCd != ""'>
           AND SA0101.CARLINE_CD = #{carlineCd}
         </if>
         <if test='modelCd != null and modelCd != ""'>
           AND SA0102.MODEL_CD = #{modelCd}
         </if>
         <if test='modelNm != null and modelNm != ""'>
             <choose>
                 <when test='@org.apache.commons.lang3.StringUtils@contains(modelNm,"*")'>
                     <bind name='modelNm' value='@org.apache.commons.lang3.StringUtils@replace(modelNm, "*", "%")' />
                      AND SA0102.MODEL_NM LIKE #{modelNm}
                 </when>
             	 <otherwise>
                      AND SA0102.MODEL_NM = #{modelNm}
                 </otherwise>
             </choose>
         </if>
	</select>

</mapper>