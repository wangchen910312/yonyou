<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="chn.bhmc.dms.sal.usc.service.dao.TopSelectionDAO">

	<!-- 조회 목록 - 차량정보  -->
	<select id="selectCreditListByCondition" parameterType="TopSelectionSearchVO" resultType="TopSelectionVO">
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                SELECT SA0129.VIN,SA0129.CARSTYLE,SA0135.SHENHESUBMITTIMES,SA0135.CREATEDATE AS CREATETIME,SA0135.SHENHESTATE
                      ,SA0135.ID,SA0135.CAR_ID
                  FROM SA_0129T SA0129,SA_0135T SA0135
                 WHERE 1=1
                   AND SA0129.ID = SA0135.CAR_ID
                 <if test='sShenheStat != null and sShenheStat != ""'>
                   AND SA0135.SHENHESTATE  = #{sShenheStat}
                 </if>
                 <if test='sVinNo != null and sVinNo != ""'>
                   AND SA0129.VIN  LIKE '%' || #{sVinNo} || '%'
                 </if>
                 <!-- <if test='sVinNo != null and sVinNo != ""'>
                    <choose>
                        <when test='@org.apache.commons.lang3.StringUtils@contains(sVinNo,"*")'>
                            <bind name='sVinNo' value='@org.apache.commons.lang3.StringUtils@replace(sVinNo, "*", "%")' />
                             AND SA0129.VIN LIKE #{sVinNo}
                        </when>
                        <otherwise>
                             AND SA0129.VIN = #{sVinNo}
                        </otherwise>
                    </choose>
                 </if> -->
                 <if test='sCreateStartTime != null and sCreateStartTime != ""'>
                     AND SA0135.CREATETIME <![CDATA[>=]]> TRUNC(#{sCreateStartTime},'DD')
                 </if>
                 <if test='sCreateEndTime != null and sCreateEndTime != ""'>
                     AND SA0135.CREATETIME <![CDATA[<]]> TRUNC(#{sCreateEndTime},'DD')+1
                 </if>
                 ORDER BY
                 <choose>
                    <when test='sort != null'>
                        <foreach item="item" index="index" collection="sort" open="" separator="," close="">
                            <choose>
                                <when test='item.field == "vin"'>VIN <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "carstyle"'>CARSTYLE <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "shenhesubmittimes"'>SHENHESUBMITTIMES <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "createtime"'>CREATETIME <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "shenhestat"'>SHENHESTAT <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <otherwise>
                                    VIN ASC
                                </otherwise>
                            </choose>
                        </foreach>
                    </when>
                    <otherwise>
                        VIN ASC
                    </otherwise>
                </choose>
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM > #{firstIndex}
            </if>
        </where>
	</select>

	<!-- 목록 갯수 - 차량정보  -->
	<select id="selectCreditListByConditionCnt" parameterType="TopSelectionSearchVO" resultType="int">
        SELECT COUNT(*) AS VALUE
          FROM SA_0129T SA0129,SA_0135T SA0135
         WHERE 1=1
           AND SA0129.ID = SA0135.CAR_ID
         <if test='sShenheStat != null and sShenheStat != ""'>
           AND SA0135.SHENHESTATE  = #{sShenheStat}
         </if>
         <if test='sVinNo != null and sVinNo != ""'>
           AND SA0129.VIN  LIKE '%' || #{sVinNo} || '%'
         </if>
         <!-- <if test='sVinNo != null and sVinNo != ""'>
             <choose>
                 <when test='@org.apache.commons.lang3.StringUtils@contains(sVinNo,"*")'>
                    <bind name='sVinNo' value='@org.apache.commons.lang3.StringUtils@replace(sVinNo, "*", "%")' />
                     AND SA0129.VIN LIKE #{sVinNo}
                 </when>
                 <otherwise>
                     AND SA0129.VIN = #{sVinNo}
                 </otherwise>
             </choose>
         </if> -->
         <if test='sCreateStartTime != null and sCreateStartTime != ""'>
             AND SA0135.CREATETIME <![CDATA[>=]]> TRUNC(#{sCreateStartTime},'DD')
         </if>
         <if test='sCreateEndTime != null and sCreateEndTime != ""'>
             AND SA0135.CREATETIME <![CDATA[<]]> TRUNC(#{sCreateEndTime},'DD')+1
         </if>
	</select>


    <!-- 수선시스템 - 차량정보 (단건) -->
    <select id="selectVehicleInfo" parameterType="TopSelectionSearchVO" resultType="TopSelectionVO">
        SELECT SA0129.VIN AS VIN_NO,SA0129.PRODUCECOMPANY AS PRODUCE_COMPANY,SA0129.BRAND
              ,SA0129.LICENSENO AS LICENSE_NO,SA0129.REGISTDATE AS PEGIST_DATE,SA0129.ISVINREPEAR AS IS_VIN_REPEAR
              ,SA0130.PERNAME AS PER_NAME,SA0130.OWNERTYPE AS OWNER_TYPE,SA0130.PERPAPERNO AS PER_PAPER_NO,SA0130.PERHU AS PER_HU
          FROM SA_0129T SA0129,SA_0130T SA0130
         WHERE 1=1
           AND SA0129.ID = SA0130.CAR_ID
           AND SA0129.ID = #{sCarId}
           AND SA0130.ID = #{sId}
    </select>


    <!-- 수선시스템 - 차량마스터 (단건) -->
    <select id="selectVehicleMaster" parameterType="TopSelectionSearchVO" resultType="TopSelectionUsedCarVO">
        SELECT SA0129.*
          FROM SA_0129T SA0129
         WHERE 1=1
             AND SA0129.ID = #{sCarId}
    </select>



    <!-- 수선시스템 - 고객정보조회 (단건) -->
    <select id="selectVehicleCustomer" parameterType="TopSelectionSearchVO" resultType="TopSelectionCustomerVO">
        SELECT *
          FROM SA_0130T SA0130
         WHERE 1=1
           AND SA0130.CAR_ID = #{sCarId}
           AND SA0130.ID = #{sId}
    </select>



</mapper>