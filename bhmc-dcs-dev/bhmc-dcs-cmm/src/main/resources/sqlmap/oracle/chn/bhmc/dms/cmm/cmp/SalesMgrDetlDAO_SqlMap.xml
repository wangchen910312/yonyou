<mapper namespace="chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO">

    <!-- 판매고문 직무상세 정보를 등록한다. -->
    <insert id="insertSalesMgrDetl" parameterType="SalesMgrDetlVO">
        /* [chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO.insertSalesMgrDetl] */
        INSERT INTO CM_3801T(
             SALE_MGR_DETL_CD
            ,SALE_MGR_DETL_NM
            ,USE_YN
        )VALUES(
             #{saleMgrDetlCd}
            ,#{saleMgrDetlNm}
            ,#{useYn}
        )
    </insert>

    <!-- 판매고문 직무상세 정보 정보를 수정한다. -->
    <update id="updateSalesMgrDetl" parameterType="SalesMgrDetlVO">
        /* [chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO.updateSalesMgrDetl] */
        UPDATE CM_3801T SET
             SALE_MGR_DETL_NM = #{saleMgrDetlNm}
            ,USE_YN = #{useYn}
        WHERE SALE_MGR_DETL_CD = #{saleMgrDetlCd}
    </update>

    <!-- 판매고문 직무상세 정보 정보를 삭제한다. -->
    <delete id="deleteSalesMgrDetl" parameterType="SalesMgrDetlVO">
        /* [chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO.deleteSalesMgrDetl] */
        DELETE FROM CM_3801T
        WHERE SALE_MGR_DETL_CD = #{saleMgrDetlCd}
    </delete>

    <!-- 판매고문 직무상세 정보를 조회한다. -->
    <select id="selectSalesMgrDetlByKey" parameterType="string" resultType="SalesMgrDetlVO">
        /* [chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO.selectSalesMgrDetlByKey] */
        SELECT * FROM CM_3801T
        WHERE SALE_MGR_DETL_CD = #{value}
    </select>

    <!-- 판매고문 직무상세 정보 목록을 조회한다. -->
    <select id="selectSalesMgrDetlsByCondition" parameterType="SalesMgrDetlSearchVO" resultType="SalesMgrDetlVO">
        /* [chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO.selectSalesMgrDetlsByCondition] */
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                SELECT *
                FROM CM_3801T
                <where>
                    <if test='sSaleMgrDetlCd != null and sSaleMgrDetlCd != ""'>
                        SALE_MGR_DETL_CD = #{sSaleMgrDetlCd}
                    </if>

                    <if test='sSaleMgrDetlNm != null and sSaleMgrDetlNm != ""'>
                        AND SALE_MGR_DETL_NM LIKE '%'||#{sSaleMgrDetlNm}||'%'
                    </if>

                    <if test='sUseYn != null and sUseYn != ""'>
                        AND USE_YN = #{sUseYn}
                    </if>
                </where>
                ORDER BY
                <choose>
                    <when test='sort != null'>
                        <foreach item="item" index="index" collection="sort" open="" separator="," close="">
                            <choose>
                                <when test='item.field == "saleMgrDetlCd"'>SALE_MGR_DETL_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "saleMgrDetlNm"'>SALE_MGR_DETL_NM <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <when test='item.field == "useYn"'>USE_YN <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                <otherwise>
                                    SALE_MGR_DETL_CD ASC
                                </otherwise>
                            </choose>
                        </foreach>
                    </when>
                    <otherwise>
                        SALE_MGR_DETL_CD ASC
                    </otherwise>
                </choose>
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM > #{firstIndex}
            </if>
        </where>
    </select>

    <!-- 판매고문 직무상세 정보 목록수를 조회한다. -->
    <select id="selectSalesMgrDetlsByConditionCnt" parameterType="SalesMgrDetlSearchVO" resultType="int">
        /* [chn.bhmc.dms.cmm.cmp.service.dao.SalesMgrDetlDAO.selectSalesMgrDetlsByConditionCnt] */
        SELECT COUNT(*) AS VALUE
        FROM CM_3801T
        <where>
            <if test='sSaleMgrDetlCd != null and sSaleMgrDetlCd != ""'>
                SALE_MGR_DETL_CD = #{sSaleMgrDetlCd}
            </if>

            <if test='sSaleMgrDetlNm != null and sSaleMgrDetlNm != ""'>
                AND SALE_MGR_DETL_NM LIKE '%'||#{sSaleMgrDetlNm}||'%'
            </if>

            <if test='sUseYn != null and sUseYn != ""'>
                AND USE_YN = #{sUseYn}
            </if>
        </where>
    </select>
</mapper>