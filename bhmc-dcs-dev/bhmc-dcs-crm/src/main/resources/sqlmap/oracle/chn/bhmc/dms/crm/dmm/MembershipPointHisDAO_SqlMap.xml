<mapper namespace="chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO">

    <!-- 멤버십 포인트 이력 목록수를 조회한다. -->
    <select id="selectPointHistorysByConditionCnt" parameterType="MembershipPointHisSearchVO" resultType="int">
        /* [chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO.selectPointHistorysByConditionCnt] */
        SELECT  COUNT(*) AS VALUE
        FROM    CR_0813T A
                INNER JOIN CR_0803T B ON A.DLR_CD = B.DLR_CD
                    AND A.MEMBERSHIP_NO = B.MEMBERSHIP_NO
                    AND A.CARD_TP_CD = B.CARD_TP_CD
                    AND A.CARD_NO = B.CARD_NO
                    AND A.USE_YN = 'Y'
                    <if test='(sCardTpCd != null) and (sCardTpCd != "")'>
                    AND A.CARD_TP_CD = #{sCardTpCd}
                    </if>
                LEFT OUTER JOIN CR_0801T C ON A.MEMBERSHIP_NO = C.MEMBERSHIP_NO
                WHERE   A.DLR_CD = #{sDlrCd}
                <if test='(sMembershipNo != null) and (sMembershipNo != "")'>
                    AND     A.MEMBERSHIP_NO = #{sMembershipNo}
                </if>
                <if test='(sCustNo != null) and (sCustNo != "")'>
                    AND     C.CUST_NO = #{sCustNo}
                </if>
    </select>

    <select id="selectTotPointByKey" parameterType="MembershipPointHisSearchVO" resultType="int">
        /* [chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO.selectTotPointByKey] */
        SELECT  NVL(SUM(LAST_POINT_VAL),0) AS VALUE
        FROM    CR_0813T
        WHERE   DLR_CD = #{sDlrCd}
        AND     MEMBERSHIP_NO = {sMembershipNo}
        AND     CARD_NO = #{sCardNo}
        AND     CARD_TP_CD = #{sCardTpCd}
        AND     POINT_TP = '+'
        AND     EXTC_TARG_YN = 'Y'
    </select>

    <!-- 멤버십 포인트 이력  정보 목록을 조회한다. -->
    <select id="selectPointHistorysByCondition" parameterType="MembershipPointHisSearchVO" resultType="MembershipPointHisVO">
        /* [chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO.selectPointHistorysByCondition] */
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, T1.* FROM (
                    SELECT  A.DLR_CD
                            ,A.MEMBERSHIP_NO
                            ,B.POINT_HIS_SEQ
                            ,A.CARD_TP_CD
                            ,A.CARD_NO
                            ,B.POINT_CD
                            ,B.POINT_TP
                            ,B.OCCR_POINT_VAL
                            ,'('||B.POINT_TP||') '||TO_CHAR(B.OCCR_POINT_VAL,'FM9,999,999,999') AS OCCR_POINT_VAL2
                            ,B.OCCR_DT
                            ,B.DEPT_NM
                            ,B.PRSN_ID
                            ,D.USR_NM AS PRSN_NM
                            ,B.EXTC_DT
                            ,B.EXTC_TARG_YN
                            ,B.EXTC_TARG_POINT_VAL
                            ,C.CUST_NO
                            ,C.REG_DT
                    FROM CR_0813T A
                    INNER JOIN CR_0803T B ON A.DLR_CD = B.DLR_CD
                        AND A.MEMBERSHIP_NO = B.MEMBERSHIP_NO
                        AND A.CARD_TP_CD = B.CARD_TP_CD
                        AND A.CARD_NO = B.CARD_NO
                        AND A.USE_YN = 'Y'
                        <if test='(sCardTpCd != null) and (sCardTpCd != "")'>
                            AND A.CARD_TP_CD = #{sCardTpCd}
                        </if>
                    LEFT OUTER JOIN CR_0801T C ON A.MEMBERSHIP_NO = C.MEMBERSHIP_NO
                    LEFT OUTER JOIN CM_0801T D ON B.PRSN_ID = D.USR_ID
                    WHERE   A.DLR_CD = #{sDlrCd}
                    <if test='(sMembershipNo != null) and (sMembershipNo != "")'>
                        AND     A.MEMBERSHIP_NO = #{sMembershipNo}
                    </if>
                    <if test='(sCustNo != null) and (sCustNo != "")'>
                        AND     C.CUST_NO = #{sCustNo}
                    </if>
                    ORDER BY
                    <choose>
                        <when test='sort != null'>
                            <foreach item="item" index="index" collection="sort" open="" separator="," close="">
                                <choose>
                                    <when test='item.field == "pointHisNo"'>B.POINT_HIS_NO <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "cardNo"'>A.CARD_NO <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "pointCd"'>B.POINT_CD <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "pointTp"'>B.POINT_TP <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "occrPointVal"'>B.OCCR_POINT_VAL <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "occrDt"'>B.OCCR_DT <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "deptNm"'>B.DEPT_NM <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <when test='item.field == "prsnId"'>B.PRSN_ID <choose><when test='item.dir == "asc"'>ASC</when><otherwise>DESC</otherwise></choose></when>
                                    <otherwise>
                                        OCCR_DT DESC
                                    </otherwise>
                                </choose>
                            </foreach>
                        </when>
                        <otherwise>
                            OCCR_DT DESC
                        </otherwise>
                    </choose>
            ) T1
            <where>
                <if test='firstIndex != -1 and lastIndex != -1'>
                    ROWNUM <![CDATA[<=]]> #{lastIndex}
                </if>
            </where>
        )
        <where>
            <if test='firstIndex != -1 and lastIndex != -1'>
                RNUM > #{firstIndex}
            </if>
        </where>
    </select>


    <!-- 멤버십 포인트 이력  정보 목록을 조회한다. -->
    <select id="selectPointInfosCondition" parameterType="MembershipPointHisSearchVO" resultType="MembershipPointHisVO">
        /* [chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO.selectPointInfosCondition] */
        SELECT  A.DLR_CD
                ,A.MEMBERSHIP_NO
                ,C.CUST_NO
                ,A.VIN_NO
                ,A.GRADE_CD
                ,A.FILE_DOC_NO
                ,A.REG_DT
                ,A.LAST_POINT_VAL AS USE_POINT
                ,NVL(B.CHARGE_USE_POINT,0) AS CHARGE_USE_POINT
        FROM    CR_0801T A LEFT OUTER JOIN (
                SELECT DLR_CD
                      ,MEMBERSHIP_NO
                      ,SUM(NVL(REAL_TOT_AMT,0)) AS CHARGE_USE_POINT
                FROM CR_0803T
                WHERE DLR_CD = #{sDlrCd}
                AND CARD_TP_CD = '02'
                AND POINT_TP = '+'
                GROUP BY DLR_CD, MEMBERSHIP_NO
                ) B
                ON A.DLR_CD = B.DLR_CD
                AND A.MEMBERSHIP_NO = B.MEMBERSHIP_NO
                LEFT OUTER JOIN CR_0101T C
                ON A.DLR_CD = C.DLR_CD
                AND A.CUST_NO = C.CUST_NO
        WHERE A.DLR_CD = #{sDlrCd}
        <if test='(sMembershipNo != null) and (sMembershipNo != "")'>
            AND A.MEMBERSHIP_NO = #{sMembershipNo}
        </if>
        <if test='(sCustNo != null) and (sCustNo != "")'>
            AND A.CUST_NO = #{sCustNo}
        </if>
    </select>

    <insert id="insertSpecialPoint" parameterType="MembershipPointHisSearchVO" >
    /* [chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO.insertSpecialPoint] */
        INSERT INTO CR_0803T    --멤버쉽이력(포인트/충전)상세
        (
            DLR_CD                     --딜러코드
            ,MEMBERSHIP_NO              --멤버쉽번호
            ,POINT_HIS_SEQ              --포인트이력일련번호
            ,CARD_TP_CD                 --카드유형코드
            ,CARD_NO                    --카드번호
            ,POINT_CD                   --포인트코드
            ,POINT_TP                   --포인트유형
            ,OCCR_POINT_VAL             --발생포인트값
            ,OCCR_DT                    --발생일자
            ,DEPT_NM                    --부서명
            ,PRSN_ID                    --담당자ID
            ,REG_USR_ID                 --등록자ID
            ,REG_DT                     --등록일자
            ,EXTC_DT                    --소멸일자
            ,EXTC_TARG_YN               --소멸대상여부
            ,EXTC_TARG_POINT_VAL        --소멸대상포인트값
            ,LAST_POINT_VAL             --최종포인트값
        )
        VALUES
        (
            #{dlrCd}                     --딜러코드
            ,#{membershipNo}              --멤버쉽번호
            ,SEQ_CR_0803T.NEXTVAL         --포인트이력일련번호
            ,#{cardTpCd}                  --카드유형코드
            ,#{cardNo}                    --카드번호
            ,#{pointCd}                   --포인트코드
            ,#{pointTp}                   --포인트유형
            ,#{occrPointVal}              --발생포인트값
            ,SYSDATE                      --발생일자
            ,#{deptNm}                    --부서명
            ,#{prsnId}                    --담당자ID
            ,#{regUsrId}                  --등록자ID
            ,SYSDATE                     --등록일자
            ,ADD_MONTHS(SYSDATE,#{membershipPointPeriod}) --소멸일자
            ,#{extcTargYn}                --소멸대상여부
            ,#{extcTargPointVal}          --소멸대상포인트값
            ,#{lastPointVal}              --최종포인트값
        )
    </insert>

    <insert id="insertRechargeAmt" parameterType="MembershipPointHisVO" >
    /* [chn.bhmc.dms.crm.dmm.service.dao.MembershipPointHisDAO.insertRechargeAmt] */
        INSERT INTO CR_0803T    --멤버쉽이력(포인트/충전)상세
        (
            DLR_CD                     --딜러코드
            ,MEMBERSHIP_NO              --멤버쉽번호
            ,POINT_HIS_SEQ              --포인트이력일련번호
