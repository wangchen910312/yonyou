            ,CARD_NO                    --카드번호
            ,POINT_CD                   --포인트코드
            ,POINT_TP                   --포인트유형
            ,OCCR_POINT_VAL             --발생포인트값
            ,OCCR_DT                    --발생일자
            ,DEPT_NM                    --부서명
            ,PRSN_ID                    --담당자ID
            ,REG_USR_ID                 --등록자ID
            ,REG_DT                     --등록일자
            ,EXTC_DT                    --소멸일자
            ,EXTC_TARG_YN               --소멸대상여부
