<mapper namespace="chn.bhmc.dms.bat.sal.div.service.dao.TracticsDeliveryPreMonthDelDAO">


    <!-- 전략 오더 이전 달 신청 거절건 삭제 -->
    <update id="updateTracticsDelivery" parameterType="int">

        UPDATE SA_0256T
           SET STR_STAT    = 'X'
              ,CAANC_RESON = 'DELETE STATUS CANCEL,DENY'
              ,UPDT_DT     = SYSDATE
              ,UPDT_USR_ID = 'BATCH'
         WHERE STR_STAT IN ('A','C')
           AND TO_CHAR(STR_ASK_DT,'YYYYMM') =  TO_CHAR(ADD_MONTHS(SYSDATE , ( #{day} * -1 )),'YYYYMM')
    </update>


</mapper>